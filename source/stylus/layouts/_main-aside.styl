/* ==========================================================================
   -- Main ASide
   ========================================================================== */

#main-aside
    display flex
    flex-direction column
    background $caribbean_green
    flex-shrink 0
    width 110px

    @media screen and (max-width: $phone)
        display none

    > #logo
        display flex
        justify-content center
        margin-top 18px
        margin-bottom 36px

        svg
            width 63px 
            height 54px
            fill white
    
    > ul
        display flex
        flex-direction column

        > li
            display flex
            flex-direction column
            align-items center
            text-align center
            margin-bottom 46px

            > svg
                transition fill .25s
                width 24px
                height @width
                fill $gossamer
                margin-bottom 6px

            > .text
                transition color .25s

            &.active
            &:hover
                svg
                    fill white

                .text
                    color white