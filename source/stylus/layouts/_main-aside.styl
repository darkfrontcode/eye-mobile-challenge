/* ==========================================================================
   -- Main ASide
   ========================================================================== */

#main-aside
    display flex
    flex-direction column
    width 110px
    background $caribbean_green

    > #logo
        display flex
        justify-content center
        margin-top 18px
        margin-bottom 36px

        svg
            width 63px 
            height 54px
            fill white
    
    > ul
        display flex
        flex-direction column

        > li
            display flex
            flex-direction column
            align-items center
            text-align center
            margin-bottom 46px

            > svg
                width 24px
                height @width
                fill $gossamer
                margin-bottom 6px

            &.active
            &:hover
                svg
                    fill white

                .text
                    color white