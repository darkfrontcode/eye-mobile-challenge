/* ==========================================================================
   -- Main ASide
   ========================================================================== */

#main-aside
    background $caribbean_green
    width 110px

    @media screen and (max-width: $phone)
        display none

    > #logo
        margin-top 18px
        margin-bottom 36px

        svg
            width 63px 
            height 54px
            fill white
    
    > ul
        > li
            text-align center
            margin-bottom 46px

            > svg
                transition fill .25s
                width 24px
                height @width
                fill $gossamer
                margin-bottom 6px

            > .text
                heading-01()
                transition color .25s
                max-width 90px

            &.active
            &:hover
                svg
                    fill white

                .text
                    color white