/* ==========================================================================
   -- Billing
   ========================================================================== */

#billing
    padding 28px 40px
    box-sizing border-box
    overflow-y auto

    @media screen and (max-width: $phone)
        padding 28px 0

#date-tags
    scrollbar-01()
    margin-bottom 28px

    @media screen and (max-width: $phone)
        max-width 100vw
        overflow-x auto

        &::-webkit-scrollbar-thumb
            background $white_lilac

    > ul
        > li
            heading-03()
            transition opacity .25s
            box-sizing border-box
            border-radius 18px
            padding 9px 26px
            background $caribbean_green
            margin-right 15px
            opacity .5
            cursor pointer

            &:hover
            &.active
                opacity 1

        @media screen and (max-width: $phone)
            > li:nth-of-type(1)
                margin-left 15px

#balance
    position relative
    margin-bottom 32px

    @media screen and (max-width: $phone)
        display flex
        flex-direction column

    > .total
        width 50%
        height 144px
        border-bottom 1px solid $iron

        @media screen and (max-width: $phone)
            width 100%

        > .price-tag
            > p
                heading-07()
                margin-top 32px
                margin-right 10px

        > .value
            > p
                &:nth-of-type(1)
                    heading-05()

                &:nth-of-type(2)
                    heading-06()

            @media screen and (max-width: $phone)
                > p:nth-of-type(2)
                    font-size 56px

    > hgroup
        position absolute
        left 0

        @media screen and (max-width: $phone)
            display flex
            position relative
            left initial
            margin-bottom 70px
            padding 0 15px

        > h5
            > .icon-wrapper
                width 28px
                height 28px
                margin-right 10px

                > svg
                    width 28px
                    height 28px
                    fill $french_gray

            > span
                heading-04()

            &:nth-of-type(1)
                margin-bottom 28px

                @media screen and (max-width: $phone)
                    margin-right 30px
                    margin-bottom 0

            &.active
                > span
                    color $storm_gray

                > .icon-wrapper
                    > svg
                        fill $storm_gray
#graphics
    > .center-block
        width 100%

        @media screen and (max-width: $phone)
            flex-direction column
            align-items center

#services
#status
    width 100%

    > .content
        width 50%
        
        @media screen and (max-width: $phone)
            width 80%

        h3
            heading-05()

        > ul
            width 100%

            > li
                align-items center
                margin-bottom 34px
                
                > .marker
                    align-items center
                    width 50%

                    > .circle
                        width 20px
                        height @width
                        border-radius 10px
                        margin-right 7px

                    > h6
                        heading-08()
                        margin-top 2px

                > .value
                    width 50%

                    > span
                        heading-09()

#services
    @media screen and (max-width: $phone)
        margin-bottom 60px

    > .content
        > h3
            margin-bottom 20px

        > .doughnut
            width 134px
            height @width
            margin-bottom 20px

        > ul
            > li
                &:nth-of-type(1)
                    .circle
                        background $cornflower_blue

                &:nth-of-type(2)
                    .circle
                        background $purple_heart
                        
                &:nth-of-type(3)
                    .circle
                        background $dodger_blue

#status
    > .content
        > h3
            margin-bottom 40px

        > .board
            width 282px
            height 200px

        > ul
            > li
                &:nth-of-type(1)
                    .circle
                        background $caribbean_green
                
                &:nth-of-type(2)
                    .circle
                        background $wild_watermelon