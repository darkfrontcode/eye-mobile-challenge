/* ==========================================================================
   -- Billing
   ========================================================================== */

#billing
    padding 28px 40px
    box-sizing border-box
    overflow-y auto

    @media screen and (max-width: $phone)
        padding 28px 0

#date-tags
    scrollbar-01()
    display flex
    flex-grow 1
    margin-bottom 28px

    @media screen and (max-width: $phone)
        max-width 100vw
        overflow-x auto

        &::-webkit-scrollbar-thumb
            background $white_lilac

    > ul
        display flex
        flex-shrink 0

        > li
            transition opacity .25s
            box-sizing border-box
            border-radius 18px
            padding 9px 26px
            background $caribbean_green
            margin-right 15px
            opacity .5
            cursor pointer

            &:hover
            &.active
                opacity 1

        @media screen and (max-width: $phone)
            > li:nth-of-type(1)
                margin-left 15px

#balance
    display flex
    justify-content center
    position relative
    margin-bottom 32px

    @media screen and (max-width: $phone)
        display flex
        flex-direction column

    > .total
        display flex
        justify-content center
        width 50%
        height 144px
        border-bottom 1px solid $iron

        @media screen and (max-width: $phone)
            width 100%

        > .price-tag
            > p
                margin-top 32px
                margin-right 10px

        > .value
            display flex
            flex-direction column
            align-items center

            @media screen and (max-width: $phone)
                > p:nth-of-type(2)
                    font-size 56px

    > hgroup
        position absolute
        left 0

        @media screen and (max-width: $phone)
            display flex
            position relative
            left initial
            margin-bottom 70px
            padding 0 15px

        > h5
            display flex
            align-items center
            
            > .icon-wrapper
                width 28px
                height 28px
                margin-right 10px

                > svg
                    width 28px
                    height 28px
                    fill $french_gray

            &:nth-of-type(1)
                margin-bottom 28px

                @media screen and (max-width: $phone)
                    margin-right 30px
                    margin-bottom 0

            &.active
                > span
                    color $storm_gray

                > .icon-wrapper
                    > svg
                        fill $storm_gray
#graphics
    display flex
    justify-content center

    > .center-block
        display flex
        justify-content space-around
        width 100%

        @media screen and (max-width: $phone)
            flex-direction column
            align-items center

#services
#status
    display flex
    flex-direction column
    align-items center
    width 100%

    > .content
        width 50%
        
        @media screen and (max-width: $phone)
            width 80%

        > ul
            width 100%

            > li
                display flex
                align-items center
                justify-content center
                margin-bottom 34px
                
                > .marker
                    display flex
                    justify-content flex-start
                    align-items center
                    width 50%

                    > .circle
                        width 20px
                        height @width
                        border-radius 10px
                        margin-right 7px
                    > h6
                        margin-top 2px

                > .value
                    display flex
                    justify-content flex-end
                    width 50%

#services
    @media screen and (max-width: $phone)
        margin-bottom 60px

    > .content
        display flex
        flex-direction column
        align-items center

        > h3
            margin-bottom 20px

        > .doughnut
            display flex
            justify-content center
            width 134px
            height @width
            margin-bottom 20px

        > ul
            > li:nth-of-type(1)
                > .marker
                    > .circle
                        background $cornflower_blue

            > li:nth-of-type(2)
                > .marker
                    > .circle
                        background $purple_heart

            > li:nth-of-type(3)
                > .marker
                    > .circle
                        background $dodger_blue

#status
    > .content
        display flex
        flex-direction column
        align-items center

        > h3
            margin-bottom 40px

        > .board
            display flex
            justify-content center
            width 282px
            height 200px

        > ul
            > li:nth-of-type(1)
                > .marker
                    > .circle
                        background $caribbean_green

            > li:nth-of-type(2)
                > .marker
                    > .circle
                        background $wild_watermelon