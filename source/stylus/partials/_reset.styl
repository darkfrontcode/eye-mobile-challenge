/* ==========================================================================
   -- Reset
   ========================================================================== */

body
html
h1
h2
h3
h4
h5
h6
p
span
a
ul
li
menu
section
button
label
    margin 0
    padding 0
    line-height 1em

body
html
    height 100%

body
    &::-webkit-scrollbar
        width 6px

    &::-webkit-scrollbar-thumb
        border-radius 6px
        background rgba(0,0,0,.3)

a
a:active
a:hover
    text-decoration none
    color initial

img
    border none
    margin 0
    padding 0

label
    cursor pointer

ul
    list-style none

button
input
    &:focus
        outline none

button
    cursor pointer